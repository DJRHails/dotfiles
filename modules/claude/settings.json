{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "model": "opus",
    "attribution": {
        "commit": "",
        "pr": ""
    },
    "defaultMode": "acceptEdits",
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$HOME/.files/modules/claude/hooks/check-encryption.sh\"",
                        "timeout": 30
                    }
                ]
            }
        ]
    },
    "mcpServers": {
        "playwriter": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "playwriter"
            ]
        },
        "figma-dev-mode-mcp-server": {
            "type": "http",
            "url": "https://mcp.figma.com/mcp"
        },
        "context7": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "env": {}
        }
    }
}