{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "defaultMode": "acceptEdits",
  "mcpServers": {
    "playwriter": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "playwriter"
      ]
    },
    "figma-dev-mode-mcp-server": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    }
  },
  "model": "opus"
}
