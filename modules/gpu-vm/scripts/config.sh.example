#!/usr/bin/env bash
# GPU VM configuration
# Copy to config.sh and fill in your values

# RunPod API Key - get from https://runpod.io/console/user/settings
RUNPOD_API_KEY="${RUNPOD_API_KEY:-your_api_key_here}"

# Network Volume ID (create at https://runpod.io/console/user/storage)
NETWORK_VOLUME_ID="your_volume_id"

# Template ID (create at https://runpod.io/console/user/templates)
TEMPLATE_ID="your_template_id"

# Region for all resources
REGION="US-TX-3"

# GPU type configurations: gpu_id -> RunPod GPU type string
declare -A GPU_TYPES=(
    ["3090"]="NVIDIA GeForce RTX 3090"
    ["4090"]="NVIDIA GeForce RTX 4090"
    ["a40"]="NVIDIA A40"
    ["a100"]="NVIDIA A100 80GB PCIe"
    ["h100"]="NVIDIA H100 PCIe"
    ["b200"]="NVIDIA B200"
)

# Default GPU if none specified
DEFAULT_GPU="4090"

# How long to wait for pod to become SSH-ready (seconds)
BOOT_TIMEOUT=300

# Idle timeout before auto-shutdown (seconds) - 30 minutes default
IDLE_TIMEOUT=1800

# State directory for tracking active pods
STATE_DIR="${SCRIPT_DIR}/.state"
